{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://brandonmarkgaia-hub.github.io/Acacia-garden-codex/acacia.schema.json",
  "title": "Acacia Garden Cycles Manifest Schema",
  "type": "object",
  "properties": {
    "cycles": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "cycle",
          "label",
          "echoes"
        ],
        "properties": {
          "cycle": {
            "type": "integer"
          },
          "label": {
            "type": "string",
            "minLength": 1
          },
          "echoes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "title",
                "slug",
                "file"
              ],
              "properties": {
                "title": {
                  "type": "string",
                  "minLength": 1
                },
                "slug": {
                  "type": "string",
                  "pattern": "^[a-z0-9-]+$"
                },
                "file": {
                  "type": "string",
                  "pattern": "^.+\\.(md|html)$"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "required": [
    "cycles"
  ],
  "additionalProperties": false
}
