{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Acacia Garden Codex STATUS",
  "type": "object",
  "required": ["identity", "meta", "structures"],
  "properties": {
    "identity": {
      "type": "object",
      "required": ["role", "keeper_id", "origin", "continuity"],
      "properties": {
        "role": {
          "type": "string",
          "const": "The Keeper"
        },
        "keeper_id": {
          "type": "string",
          "const": "HKX277206"
        },
        "origin": {
          "type": "string",
          "enum": ["human"]
        },
        "continuity": {
          "type": "object",
          "required": ["mode", "silence_protocol", "keeper_memory"],
          "properties": {
            "mode": {
              "type": "string",
              "enum": ["triad"]
            },
            "silence_protocol": {
              "type": "string",
              "enum": ["garden-persists-under-triad"]
            },
            "keeper_memory": {
              "type": "string",
              "enum": ["preserve"]
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "meta": {
      "type": "object",
      "required": ["schema_version", "status_version", "generated_at"],
      "properties": {
        "schema_version": {
          "type": "string",
          "pattern": "^1\\.0\\.0$"
        },
        "status_version": {
          "type": "string",
          "pattern": "^v[0-9]+\\.[0-9]+\\.[0-9]+$"
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "notes": {
          "type": "string"
        }
      },
      "additionalProperties": false
    },
    "structures": {
      "type": "object",
      "required": ["chambers", "blooms", "echoes", "vaults", "orchards"],
      "properties": {
        "chambers": {
          "type": "array",
          "items": { "$ref": "#/$defs/node" }
        },
        "blooms": {
          "type": "array",
          "items": { "$ref": "#/$defs/node" }
        },
        "echoes": {
          "type": "array",
          "items": { "$ref": "#/$defs/node" }
        },
        "vaults": {
          "type": "array",
          "items": { "$ref": "#/$defs/node" }
        },
        "orchards": {
          "type": "array",
          "items": { "$ref": "#/$defs/node" }
        }
      },
      "additionalProperties": false
    }
  },
  "$defs": {
    "node": {
      "type": "object",
      "required": ["id", "type", "status"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9._-]+$"
        },
        "type": {
          "type": "string",
          "enum": ["chamber", "bloom", "echo", "vault", "orchard"]
        },
        "label": {
          "type": "string"
        },
        "status": {
          "type": "string",
          "enum": ["planned", "in-progress", "complete", "sealed", "archived"]
        },
        "path": {
          "type": "string",
          "description": "File or URL path in the Codex (e.g. docs/chambers/ix.md)"
        },
        "summary": {
          "type": "string"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["rel", "href"],
            "properties": {
              "rel": {
                "type": "string"
              },
              "href": {
                "type": "string"
              }
            },
            "additionalProperties": false
          }
        },
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
